<Page
    x:Class="LightSwitch.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LightSwitch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="lightSwitchText" Text="Light Switch" TextAlignment="Center" FontFamily="Arial" FontSize="24"/>
            <Button x:Name="switchButton" Content="Turn Light On" Margin="10" Click="switchButton_Click" HorizontalAlignment="Center"/>
            <Slider x:Name="dimSlider" Margin="10" Width="200" HorizontalAlignment="Center"/>
            <TextBlock x:Name="dimValueBox" Margin="10" Text="0%" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
